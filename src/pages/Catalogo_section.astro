---
import Layout from "../layouts/Layout.astro"

const images = [
  { src: "/arreglos/arreglo1.webp", alt: "Diseño de uñas con glitter y decoración floral" },
  { src: "/arreglos/arreglo2.webp", alt: "Manicura francesa con detalles elegantes" },
  { src: "/arreglos/arreglo3.webp", alt: "Uñas con diseño geométrico y acabado brillante" },
  { src: "/arreglos/arreglo4.webp", alt: "Nail art con decoración de pedrería" },
  { src: "/arreglos/arreglo5.webp", alt: "Diseño minimalista con detalles metálicos" },
  { src: "/arreglos/arreglo6.webp", alt: "Uñas decoradas con efecto degradado" },
  { src: "/arreglos/arreglo7.webp", alt: "Manicura rubber base con decoración" },
  { src: "/arreglos/arreglo8.webp", alt: "Diseño creativo con líneas y puntos" },
  { src: "/arreglos/arreglo9.webp", alt: "Uñas con acabado mate y detalles brillantes" },
  { src: "/arreglos/arreglo10.webp", alt: "Manicura con diseño floral detallado" },
  { src: "/arreglos/arreglo11.webp", alt: "Uñas estilo ombré con decoración" },
  { src: "/arreglos/arreglo12.webp", alt: "Diseño elegante con tonos pasteles" },
  { src: "/arreglos/arreglo13.webp", alt: "Manicura con efecto espejo y pedrería" },
  { src: "/arreglos/arreglo14.webp", alt: "Nail art con efecto mármol y detalles dorados" },
  { src: "/arreglos/arreglo15.webp", alt: "Diseño tropical con colores vibrantes" },
  { src: "/arreglos/arreglo16.webp", alt: "Uñas con aplicaciones decorativas" },
  { src: "/arreglos/arreglo17.webp", alt: "Manicura con diseño abstracto y brillo" },
  { src: "/arreglos/arreglo18.webp", alt: "Diseño temático con decoración especial" },
  { src: "/arreglos/arreglo19.webp", alt: "Uñas con efecto texturizado y pedrería" },
  { src: "/arreglos/arreglo20.webp", alt: "Manicura elegante para eventos especiales" },
  { src: "/arreglos/arreglo21.webp", alt: "Diseño exclusivo con detallado artístico" },
];

// Datos estructurados para la galería
const gallerySchema = {
  "@context": "https://schema.org",
  "@type": "ImageGallery",
  "headline": "Catálogo de Diseños de Uñas",
  "description": "Galería de diseños profesionales de uñas realizados en Havanera Nails, incluyendo manicuras con gel, rubber base y nail art exclusivo.",
  "image": images.slice(0, 5).map(img => `https://havanera-nails.vercel.app${img.src}`),
  "provider": {
    "@type": "NailSalon",
    "name": "Havanera Nails",
    "sameAs": "https://havanera-nails.vercel.app"
  }
};
---

<Layout
  title="Catálogo de Diseños de Uñas | Havanera Nails"
  description="Explora nuestro catálogo de diseños profesionales de uñas. Manicuras con gel, rubber base y nail art exclusivo en Miramar, La Habana."
  canonicalURL={new URL("/Catalogo_section", Astro.site)}
  type="article"
  image="/arreglos/arreglo1.webp"
>
  <main>
    <!-- Hero del catálogo con fondo y overlay -->
    <section 
      class="relative flex items-center justify-center h-[50vh] md:h-[60vh] bg-cover bg-center overflow-hidden"
      aria-label="Banner principal del catálogo"
    >
      <!-- Imagen de fondo con overlay -->
      <div class="absolute inset-0 z-0">
        <img 
          src="/bg-top/bg-catalogo.webp"
          alt="Fondo decorativo del catálogo de uñas" 
          class="w-full h-full object-cover"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-pink-500/40 to-black/50"></div>
      </div>
      
      <!-- Contenido del hero -->
      <div class="relative z-10 text-center px-4 mt-20">
        <h1 class="text-3xl md:text-5xl lg:text-6xl font-satisfy text-white mb-4 drop-shadow-lg">
          Nuestras Creaciones
        </h1>
        <p class="text-lg md:text-xl text-white max-w-2xl mx-auto drop-shadow-md">
          Descubre la elegancia y creatividad en cada diseño realizado con pasión
        </p>
        
        <!-- Scroll indicator -->
        <div class="absolute bottom-8 left-0 right-0 flex justify-center animate-bounce">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 13l-7 7-7-7m14-8l-7 7-7-7" />
          </svg>
        </div>
      </div>
    </section>
    
    <!-- Sección del catálogo principal -->
    <section id="catalogo-completo" class="py-16 bg-gradient-to-b from-white via-pink-50/30 to-white">
      <div class="container mx-auto px-4">
        <!-- Introducción elegante -->
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-satisfy text-pink-500 mb-6">Catálogo de Diseños</h2>
          <p class="text-lg text-gray-700">
            En <span class="font-semibold text-pink-600">Havanera Nails</span> creamos arte en tus manos. 
            Nuestras técnicas de <span class="italic">gel</span> y <span class="italic">rubber base</span> garantizan 
            acabados duraderos y elegantes, personalizados para cada cliente.
          </p>
          
          <!-- Línea decorativa -->
          <div class="flex justify-center mt-8">
            <div class="w-24 h-1 bg-gradient-to-r from-pink-300 to-pink-500 rounded-full"></div>
          </div>
        </div>
        
        <!-- Galería de imágenes con grid mejorado -->
        <div class="gallery-container grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
          {images.map((image, index) => (
            <div 
              class="gallery-item group relative overflow-hidden rounded-xl shadow-md hover:shadow-xl transition-all duration-300"
            >
              <img 
                src={image.src} 
                alt={image.alt} 
                loading="lazy"
                data-index={index}
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
              />
              
              <!-- Overlay con información -->
              <div class="absolute inset-0 bg-gradient-to-t from-pink-600/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-4">
                <h3 class="text-white text-sm md:text-base font-medium drop-shadow-md">{image.alt}</h3>
              </div>
            </div>
          ))}
        </div>
        
        <!-- Llamada a la acción -->
        <div class="text-center mt-16">
          <p class="text-lg text-gray-700 mb-6">¿Te gusta lo que ves? ¡Agenda una cita y crea tu propio diseño!</p>
          <a 
            href="https://wa.me/+5355118387?text=Hola,%20me%20gustaría%20agendar%20una%20cita%20para%20mis%20uñas.%20¿Podrías%20confirmarme%20la%20disponibilidad,%20por%20favor?" 
            class="inline-flex items-center px-8 py-4 bg-gradient-to-r from-pink-500 to-pink-400 text-white font-medium rounded-full shadow-lg transform transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Agenda tu cita
          </a>
        </div>
      </div>
    </section>

    <!-- Modal Lightbox (inicialmente oculto) -->
    <div 
      id="modal" 
      class="fixed inset-0 z-50 hidden items-center justify-center bg-black bg-opacity-90"
      role="dialog"
      aria-modal="true"
      aria-label="Visualización de imagen"
    >
      <div class="absolute max-w-full max-h-full p-4">
        <!-- Botón para cerrar -->
        <button 
          id="modalClose" 
          aria-label="Cerrar" 
          class="absolute top-4 right-4 bg-white/20 backdrop-blur-sm text-white w-10 h-10 rounded-full flex items-center justify-center z-10 hover:bg-pink-500 transition-colors duration-300"
        >
          &times;
        </button>
        <!-- Botón de navegación anterior -->
        <button 
          id="modalPrev" 
          aria-label="Imagen anterior" 
          class="absolute left-4 top-1/2 transform -translate-y-1/2 bg-white/20 backdrop-blur-sm text-white w-10 h-10 rounded-full flex items-center justify-center z-10 hover:bg-pink-500 transition-colors duration-300"
        >
          &#8249;
        </button>
        <!-- Botón de navegación siguiente -->
        <button 
          id="modalNext" 
          aria-label="Siguiente imagen" 
          class="absolute right-4 top-1/2 transform -translate-y-1/2 bg-white/20 backdrop-blur-sm text-white w-10 h-10 rounded-full flex items-center justify-center z-10 hover:bg-pink-500 transition-colors duration-300"
        >
          &#8250;
        </button>
        <!-- Imagen a mostrar en el modal -->
        <img 
          id="modalImage" 
          class="max-h-[85vh] max-w-screen-lg object-contain rounded-xl mx-auto shadow-2xl" 
          src="" 
          alt=""
        />
        <!-- Información de la imagen -->
        <div id="modalInfo" class="absolute bottom-8 left-0 right-0 text-center text-white bg-black/40 backdrop-blur-sm py-3 px-6 mx-auto max-w-xl rounded-full">
          <p id="modalCaption" class="font-medium"></p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<!-- Datos estructurados para la galería -->
<script type="application/ld+json" set:html={JSON.stringify(gallerySchema)} />

<script>
  // Script para el lightbox
  document.addEventListener('DOMContentLoaded', () => {
    // Elementos del DOM
    const modal = document.getElementById('modal') as HTMLElement;
    const modalImage = document.getElementById('modalImage') as HTMLImageElement;
    const modalClose = document.getElementById('modalClose') as HTMLButtonElement;
    const modalPrev = document.getElementById('modalPrev') as HTMLButtonElement;
    const modalNext = document.getElementById('modalNext') as HTMLButtonElement;
    const modalCaption = document.getElementById('modalCaption') as HTMLParagraphElement;
    
    let currentIndex = 0;
    const images = Array.from(document.querySelectorAll('.gallery-item img'));
    
    // Funciones del Lightbox
    function openModal(index: number): void {
      currentIndex = index;
      const img = images[index];
      const imgSrc = img.getAttribute('src') || '';
      const imgAlt = img.getAttribute('alt') || '';
      
      modalImage.setAttribute('src', imgSrc);
      modalImage.setAttribute('alt', imgAlt);
      modalCaption.textContent = imgAlt;
      
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
    
    function closeModal(): void {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }
    
    function nextImage(): void {
      currentIndex = (currentIndex + 1) % images.length;
      openModal(currentIndex);
    }
    
    function prevImage(): void {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      openModal(currentIndex);
    }
    
    // Event listeners para el modal
    images.forEach((img, index) => {
      img.addEventListener('click', () => openModal(index));
    });
    
    modalClose.addEventListener('click', closeModal);
    modalNext.addEventListener('click', nextImage);
    modalPrev.addEventListener('click', prevImage);
    
    // Cerrar con Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowRight') nextImage();
      if (e.key === 'ArrowLeft') prevImage();
    });
    
    // Cerrar al hacer clic fuera
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
  });
</script>

<style>
  /* Estilos para el efecto masonry adaptable */
  @media (min-width: 768px) {
    .gallery-container {
      grid-auto-rows: 200px;
    }
    
    .gallery-item:nth-child(3n+1) {
      grid-row: span 1;
    }
    
    .gallery-item:nth-child(3n+2) {
      grid-row: span 2;
    }
    
    .gallery-item:nth-child(3n) {
      grid-row: span 1;
    }
  }
</style>