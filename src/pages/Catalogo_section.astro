          <img 
            id="modalImage" 
            class="max-h-[85vh] max-w-screen-lg object-contain rounded-xl mx-auto shadow-2xl opacity-0 transition-opacity duration-300"
            src="" 
            alt=""
            width={MODAL_WIDTH}
            height={MODAL_HEIGHT}
          />
        </div>
        <!-- Información de la imagen -->
        <div id="modalInfo" class="absolute bottom-8 left-0 right-0 text-center text-white bg-black/40 backdrop-blur-sm py-3 px-6 mx-auto max-w-xl rounded-full">
          <p id="modalCaption" class="font-medium"></p>
        </div>
      </div>
    </div>
  </main>
</Layout>

<!-- Datos estructurados para la galería -->
<script type="application/ld+json" set:html={JSON.stringify(gallerySchema)} />

<script>
  // Script para el lightbox y la carga optimizada de imágenes
  document.addEventListener('DOMContentLoaded', () => {
    // Elementos del DOM
    const modal = document.getElementById('modal') as HTMLElement;
    const modalImage = document.getElementById('modalImage') as HTMLImageElement;
    const modalPlaceholder = document.getElementById('modalPlaceholder') as HTMLElement;
    const modalClose = document.getElementById('modalClose') as HTMLButtonElement;
    const modalPrev = document.getElementById('modalPrev') as HTMLButtonElement;
    const modalNext = document.getElementById('modalNext') as HTMLButtonElement;
    const modalCaption = document.getElementById('modalCaption') as HTMLParagraphElement;
    
    let currentIndex = 0;
    const images = Array.from(document.querySelectorAll('.gallery-item img'));
    
    // Funciones del Lightbox
    function openModal(index: number): void {
      currentIndex = index;
      const img = images[index];
      const imgSrc = img.getAttribute('data-full-src') || img.getAttribute('src') || '';
      const imgAlt = img.getAttribute('alt') || '';
      
      // Mostrar el placeholder mientras carga la imagen
      modalPlaceholder.style.display = 'flex';
      modalImage.style.opacity = '0';
      
      // Preparar la imagen
      modalImage.onload = () => {
        // Ocultar placeholder y mostrar imagen cuando termine de cargar
        modalPlaceholder.style.display = 'none';
        modalImage.style.opacity = '1';
      };
      
      modalImage.setAttribute('src', imgSrc);
      modalImage.setAttribute('alt', imgAlt);
      modalCaption.textContent = imgAlt;
      
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden';
    }
    
    function closeModal(): void {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = 'auto';
    }
    
    function nextImage(): void {
      currentIndex = (currentIndex + 1) % images.length;
      openModal(currentIndex);
    }
    
    function prevImage(): void {
      currentIndex = (currentIndex - 1 + images.length) % images.length;
      openModal(currentIndex);
    }
    
    // Función para lazy-load de imágenes de forma progresiva
    function lazyLoadImages(): void {
      // Crear IntersectionObserver para cargar imágenes cuando sean visibles
      const imageObserver = new IntersectionObserver((entries, observer) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            const img = entry.target as HTMLImageElement;
            
            // Si ya tiene src, no hacer nada
            if (img.getAttribute('data-loaded') === 'true') return;
            
            // Marcar como cargada
            img.setAttribute('data-loaded', 'true');
            
            // Detener observación
            observer.unobserve(img);
          }
        });
      }, {
        rootMargin: '100px 0px', // Empezar a cargar cuando está cerca de ser visible
        threshold: 0.01 // Trigger cuando al menos 1% de la imagen es visible
      });
      
      // Observar todas las imágenes con loading="lazy"
      images.forEach(img => {
        if (img.getAttribute('loading') === 'lazy') {
          imageObserver.observe(img);
        }
      });
    }
    
    // Event listeners para el modal
    images.forEach((img, index) => {
      img.addEventListener('click', () => openModal(index));
    });
    
    modalClose.addEventListener('click', closeModal);
    modalNext.addEventListener('click', nextImage);
    modalPrev.addEventListener('click', prevImage);
    
    // Cerrar con Escape
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
      if (e.key === 'ArrowRight') nextImage();
      if (e.key === 'ArrowLeft') prevImage();
    });
    
    // Cerrar al hacer clic fuera
    modal.addEventListener('click', (e) => {
      if (e.target === modal) closeModal();
    });
    
    // Iniciar lazy loading
    lazyLoadImages();
    
    // Precarga de imágenes en segundo plano para mejorar la experiencia del modal
    let preloadIndex = 0;
    function preloadNextImages() {
      if (preloadIndex >= images.length) return;
      
      // Precargar las siguientes 3 imágenes
      for (let i = 0; i < 3; i++) {
        const nextIndex = (preloadIndex + i) % images.length;
        const imgSrc = images[nextIndex].getAttribute('data-full-src') || images[nextIndex].getAttribute('src');
        
        if (imgSrc) {
          const preloadLink = document.createElement('link');
          preloadLink.rel = 'preload';
          preloadLink.as = 'image';
          preloadLink.href = imgSrc;
          document.head.appendChild(preloadLink);
        }
        
        preloadIndex++;
        if (preloadIndex >= images.length) break;
      }
    }
    
    // Empezar a precargar imágenes después de que la página esté completamente cargada
    window.addEventListener('load', () => {
      // Iniciar la precarga después de un retraso para permitir que se carguen los recursos críticos
      setTimeout(preloadNextImages, 2000);
    });
  });
</script>

<style>
  /* Estilos para el efecto masonry adaptable */
  @media (min-width: 768px) {
    .gallery-container {
      grid-auto-rows: 200px;
    }
    
    .gallery-item:nth-child(3n+1) {
      grid-row: span 1;
    }
    
    .gallery-item:nth-child(3n+2) {
      grid-row: span 2;
    }
    
    .gallery-item:nth-child(3n) {
      grid-row: span 1;
    }
  }
  
  /* Optimizaciones de rendimiento */
  .gallery-item {
    will-change: transform;
    contain: content;
  }
  
  /* Garantizar el espacio para las imágenes para evitar CLS */
  .gallery-item img {
    aspect-ratio: 1;
  }
</style>